{% extends "layouts/public.j2" %}

{% set title = "Register" %}

{% block head %}
<script src="/static/forms/register.js" type="module"></script>
{% endblock head %}

{% block content %}
<img src="/static/assets/logo.png" alt="Passenger Logo" class="logo" width="128" height="128">

<h1>Create Your Vault</h1>

<form class="container-sm" onsubmit="registerFormAction(event)">
  <input type=" text" name="username" placeholder="Username">

  <input type="password" name="passphrase" placeholder="Passphrase">

  <small id="error-message"></small>

  <button type="submit" class="primary">Create Vault</button>
</form>

<p>
  Already have a vault? <a href="/login">Unlock it!</a>
</p>
{% endblock content %}