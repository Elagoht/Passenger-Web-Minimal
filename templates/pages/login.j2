{% extends "layouts/public.j2" %}

{% set title = "Login" %}

{% block head %}
<script type="module">
  import loginFormAction from '/static/forms/login.js';

  document.addEventListener('DOMContentLoaded', () => {
    const form = document.forms[0];
    form.addEventListener('submit', loginFormAction);
  });
</script>
{% endblock head %}

{% block content %}
<img src="/static/assets/logo.png" alt="Passenger Logo" class="logo" width="128" height="128">

<h1>Unlock Your Vault</h1>

<form class="container-sm">
  <input type="text" name="username" placeholder="Username">

  <input type="password" name="passphrase" placeholder="Passphrase">

  <button type="submit" class="primary">Unlock Vault</button>
</form>

<p>
  Don't have a vault? <a href="/register">Create one!</a>
</p>
{% endblock %}